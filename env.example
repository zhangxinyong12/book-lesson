# ========================================
# 应用基础配置
# ========================================
# 应用运行环境
NODE_ENV=development
# 应用端口
PORT=3000
# 应用名称
APP_NAME=book-lesson
# 应用版本
APP_VERSION=0.0.1

# ========================================
# MySQL数据库配置
# ========================================
# 数据库主机地址
DB_HOST=localhost
# 数据库端口
DB_PORT=3306
# 数据库用户名
DB_USERNAME=book_user
# 数据库密码
DB_PASSWORD=user123456
# 数据库名称
DB_DATABASE=book_lesson
# 是否自动同步数据库结构（开发环境建议开启，生产环境必须关闭）
DB_SYNCHRONIZE=true
# 是否开启SQL日志
DB_LOGGING=true
# 数据库连接池最大连接数
DB_MAX_CONNECTIONS=10
# 数据库连接超时时间（毫秒）
DB_CONNECTION_TIMEOUT=30000

# ========================================
# MongoDB数据库配置
# ========================================
# MongoDB主机地址
MONGO_HOST=localhost
# MongoDB端口
MONGO_PORT=27017
# MongoDB用户名
MONGO_USERNAME=admin
# MongoDB密码
MONGO_PASSWORD=admin123456
# MongoDB数据库名称
MONGO_DATABASE=book_lesson
# MongoDB认证数据库
MONGO_AUTH_SOURCE=admin
# MongoDB连接字符串
MONGO_URI=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DATABASE}?authSource=${MONGO_AUTH_SOURCE}

# ========================================
# Redis缓存配置
# ========================================
# Redis主机地址
REDIS_HOST=localhost
# Redis端口
REDIS_PORT=6379
# Redis密码（如果设置了密码）
REDIS_PASSWORD=
# Redis数据库索引
REDIS_DB=0
# Redis连接超时时间（毫秒）
REDIS_CONNECT_TIMEOUT=10000
# Redis命令超时时间（毫秒）
REDIS_COMMAND_TIMEOUT=5000
# Redis连接池最大连接数
REDIS_MAX_CLIENTS=10

# ========================================
# 日志配置
# ========================================
# 日志级别
LOG_LEVEL=debug
# 日志文件路径
LOG_FILE_PATH=./logs
# 是否启用控制台日志
LOG_CONSOLE=true
# 是否启用文件日志
LOG_FILE=true
# 日志文件最大大小（字节）
LOG_MAX_SIZE=10485760
# 日志文件保留天数
LOG_MAX_DAYS=30

# ========================================
# 安全配置
# ========================================
# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# JWT过期时间（秒）
JWT_EXPIRES_IN=86400
# 密码加密盐值
PASSWORD_SALT_ROUNDS=10
# 请求频率限制（每分钟请求数）
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ========================================
# 跨域配置
# ========================================
# 允许的源
CORS_ORIGIN=*
# 是否允许携带凭证
CORS_CREDENTIALS=true
# 允许的请求方法
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
# 允许的请求头
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization

# ========================================
# 文件上传配置
# ========================================
# 上传文件最大大小（字节）
UPLOAD_MAX_SIZE=10485760
# 上传文件存储路径
UPLOAD_PATH=./uploads
# 允许的文件类型
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# ========================================
# 邮件配置（可选）
# ========================================
# 邮件服务提供商
MAIL_HOST=smtp.gmail.com
# 邮件服务端口
MAIL_PORT=587
# 邮件用户名
MAIL_USER=your-email@gmail.com
# 邮件密码
MAIL_PASSWORD=your-app-password
# 邮件发件人
MAIL_FROM=noreply@book-lesson.com
# 是否启用TLS
MAIL_SECURE=false
